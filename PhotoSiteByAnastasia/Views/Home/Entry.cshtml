@model PhotoSiteByAnastasia.Models.EmailModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Записаться";
}
@using (Html.BeginForm("Entry", "Home", FormMethod.Post, new { @class = "well" }))
{
    <h2>Здесь вы можете записаться ко мне на фотосессию</h2>
    <b>Как это сделать?</b>    <br />
    <section class="feed1">
        <b>
            Написать мне в личные сообщения в
            <a href="https://vk.com/stm_photo_by_anastasya">
                <img src="~/Content/images/vk.png" width="40"
                     height="40" alt="Анастасия в вк">
            </a>
        </b>
    </section>

    <section class="feed2">
        <div class="feedback">
            <b>Заполнить эту форму:</b> <br />
            <label>Ваше имя</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "input-xxlarge" })
            <label>Вам e-mail</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "input-xxlarge" })
            <label>Тема</label>
            @Html.TextBoxFor(m => m.Subject, new { @class = "input-xxlarge" })
            <br />
            <label>Сообщение</label>
            @Html.TextAreaFor(m => m.Body, new { @class = "input-xxlarge" })
            <br />
            <br />
            <input type="submit" class="btn" value="Send" />
        </div>
    </section>
}